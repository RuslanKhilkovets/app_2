{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "images/*": ["assets/images/*"],
      "icons/*": ["assets/icons/*"],
      "constants/*": ["src/constants/*"],
      "validations/*": ["src/validations/*"]
    }
  }
}
